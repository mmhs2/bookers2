<div class="user_edit_page container">
<div class="row">
    <div class="col-6 mx-auto">
    <h2>User info</h2>
    <% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
    <%= message %>
    </div>
    <% end %>
    <%= form_with model:@user, local:true do |f| %>
<!--name-->
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, class: "form-control", placeholder:"name", autofocus: true, id:"inputName"%>
<!--profile_image-->
    <label for="inputImage">Image</label><br>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %><br>
<!--introduction-->
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, class: "form-control", id:"inputIntroduction" %><br>
    <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
    </div>
</div>
</div>